<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbg"
    tools:context=".RideRequested">

    <Button
        android:id="@+id/back2"


        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="528dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="52dp"
        android:gravity="center"
        android:text="Back"
        app:cornerRadius="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/riderequested"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="193dp"
        android:text="Your ride has been requested.  Buckle up and wait for your cool pool!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/back2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>